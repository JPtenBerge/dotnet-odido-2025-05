@page "/"
@using EntityFrameworkDemo
@using Microsoft.EntityFrameworkCore

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Counter: @Counter
<button @onclick="Increment">Increment</button>

<hr />

@if (Products is null)
{
    <p>Busy loading products...</p>
}
else
{
    <ul>
        @foreach (var product in Products)
        {
            <li>(@product.Id) @product.Description costs @product.Price.ToString("C")</li>
        }
    </ul>
}


